<%= form_for @post do |f| %>
<ul>
<%= f.label :title %>
<%= f.text_field :title %><br></ul>
<ul>
<%= f.label :content %>
<%= f.text_area :content %>
<br>
<%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>

<%= f.label "Create a New Category"%>
<%= f.fields_for :categories, post.categories.build do |categories_fields| %>
<%= categories_fields.text_field :name, id:'post_categories_attributes_0_name' %>
<% end %>


<%= f.submit %>

<% end %>

